<h1>Portfolio Items </h1>

<%= link_to  "Create new item", new_portfolio_path %>
    <%  @portfolio_items.each do |portf|  %>


        <p>
            <%=  link_to portf.title , portfolio_path(portf.id)  %>
        </p>
        <p>
            <%=  portf.subtitle  %>
        </p>
        <p>
            <%= portf.body  %>
        </p>

        <%=  image_tag portf.thumb_image unless  portf.thumb_image.nil? %>

            <%= link_to  "edit", edit_portfolio_path(portf.id) %>
                <%= link_to  "Delete", portfolio_path(portf), method: :delete, data: {confirm: "are you sure ?" }  %>
                    <% end %>